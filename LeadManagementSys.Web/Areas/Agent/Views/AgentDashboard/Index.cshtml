@model LeadManagementSys.Models.DTOs.AgentDashboardDto
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome to Admin Dashboard</h2>

<div class="mb-3">
    <a href="/Lead/Create" class="btn custom-button">Create Lead</a>
    <button id="fetchLeadsBtn" class="btn custom-button">Fetch Leads</button>
</div>

<div class="row">
    </div>
    <div class="col-md-3">
        <div class="card text-black mb-3 cardColor4">
            <div class="card-body">
                <h5 class="card-title">Total Leads</h5>
                <p class="card-text">@Model.TotalLeads</p>
            </div>
        </div>
    </div>


    <div class="table-responsive mt-4" id="leadsContainer">
        <!-- Leads will be displayed here -->
    </div>

    @section Scripts {
        <script>
            document.getElementById("fetchLeadsBtn").addEventListener("click", function () {
        fetch("/Lead/GetAssignedLeads")
                .then(response => response.json())
                    .then(data => {
                        let tableHtml = `
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Lead Name</th>
                                        <th>Assigned To</th>
                                        <th>Status</th>
                                        <th>Remarks</th>
                                        <th>Created At</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                        `;

                        data.forEach(lead => {
                            tableHtml += `
                                <tr>
                                    <td>${lead.leadName}</td>
                                    <td>${lead.assignedToName}</td>
                                    <td>${lead.status}</td>
                                    <td>${lead.remarks}</td>
                                    <td>${new Date(lead.createdAt).toLocaleDateString()}</td>
                                        <td>
                                             <div class="d-flex gap-2">
                                                  <a href="/Lead/Edit/${lead.id}" class="btn custom-button btn-sm me-2">Edit</a>
                                            <form method="post" action="/Lead/Delete" onsubmit="return confirm('Are you sure you want to delete this lead?');">
                                                <input type="hidden" name="id" value="${lead.id}" />
                                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                            </form>
                                            </div>
                                        </td>
                                </tr>
                            `;
                        });

                        tableHtml += `
                                </tbody>
                            </table>
                        `;
                        document.getElementById("leadsContainer").innerHTML = tableHtml;
                    })
                    .catch(error => console.error("Error fetching leads:", error));
            });
    </script>
}

</div>
